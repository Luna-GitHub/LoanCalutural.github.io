<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ffffff"
            android:orientation="vertical"
            android:radius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"

                android:layout_marginBottom="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner"></TextView>

                <TextView
                    android:id="@+id/inputt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/corner"
                    android:fontFamily="@font/digital"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="50sp"


                    />
            </RelativeLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:background="#111"
                android:backgroundTintMode="multiply"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#514F4F"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/btn_function"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#514F4F"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/function1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/off"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="OFF"
                        android:textSize="14sp">

                    </Button>

                    <Button
                        android:id="@+id/MRC"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="MRC"
                        android:textSize="14sp">

                    </Button>

                    <Button
                        android:id="@+id/Mam"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="M-"
                        android:textSize="14sp">

                    </Button>

                    <Button
                        android:id="@+id/Mduong"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="M+"
                        android:textSize="14sp">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#514F4F"
                        android:onClick="ButtonClick">

                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/function2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/phantram"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="%"
                        android:textSize="14sp">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="√"
                        android:textSize="20sp">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="MC"
                        android:textSize="14sp">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="MR"
                        android:textSize="14sp">

                    </Button>

                    <Button
                        android:id="@+id/chia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="÷"
                        android:textSize="14sp">

                    </Button>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:weightSum="5">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:onClick="ButtonClick"
                    android:text="+/-"
                    android:textSize="22sp">

                </Button>

                <Button
                    android:id="@+id/b7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="ButtonClick"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/b8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="ButtonClick"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/b9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="ButtonClick"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/nhan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:onClick="ButtonClick"
                    android:text="×"
                    android:textSize="35sp">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:weightSum="5">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:onClick="ButtonClick"
                    android:text="♪"
                    android:textSize="45sp">

                </Button>

                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="ButtonClick"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/b5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="ButtonClick"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="ButtonClick"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/tru"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="-"
                    android:textSize="35sp">

                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/CE"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FF9800"
                            android:onClick="ButtonClick"
                            android:text="CE"
                            android:textColor="@color/black"
                            android:textSize="20sp">

                        </Button>

                        <Button
                            android:id="@+id/b1"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:onClick="ButtonClick"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="25sp">

                        </Button>

                        <Button
                            android:id="@+id/b2"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:onClick="ButtonClick"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="25sp">

                        </Button>

                        <Button
                            android:id="@+id/b3"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:onClick="ButtonClick"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="25sp">

                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/on"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FF9800"
                            android:onClick="ButtonClick"
                            android:text="ON/C"
                            android:textColor="@color/black"
                            android:textSize="20sp">

                        </Button>

                        <Button
                            android:id="@+id/b0"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:onClick="ButtonClick"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="25sp">

                        </Button>

                        <Button
                            android:id="@+id/cham"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:onClick="ButtonClick"
                            android:text="."
                            android:textColor="@color/black"
                            android:textSize="25sp">

                        </Button>

                        <Button
                            android:id="@+id/bang"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:onClick="ButtonClick"
                            android:text="="
                            android:textColor="@color/black"
                            android:textSize="25sp">

                        </Button>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">


                    <Button
                        android:id="@+id/cong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:onClick="ButtonClick"
                        android:text="+"
                        android:textSize="35sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
